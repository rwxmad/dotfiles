{
    "layer": "top",
    "position": "top",
    "height": 32,
    "spacing": 4,
    "margin": 8,
    "modules-left": ["hyprland/workspaces", "hyprland/submap", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["custom/playerctl", "hyprland/language", "pulseaudio",  "network", "cpu", "memory", "temperature#cpu", "custom/gpu_temp",  "battery", "disk", "custom/weather", "custom/quote", "tray", "custom/power"],

  "hyprland/workspaces": {
      "all-outputs": false,
      "format": "{icon}",
      "format-icons": {
        "active": "ÔÑë",
        "visible": "ÓÆµ",
        "default": "ÔÜí"
      },
      "on-scroll-up": "hyprctl dispatch workspace e+1 1>/dev/null",
      "on-scroll-down": "hyprctl dispatch workspace e-1 1>/dev/null",
      "sort-by-number": true,
      "active-only": false,
      "persistent-workspaces": {
        "DP-1": [ 1, 8 ],
        "HDMI-A-1": [ 9, 10 ]
      }
    },

    "hyprland/submap": {
        "format": "<span>{}</span>"
    },

    "hyprland/window": {
      "icon": true,
      "max-length": 50
    },

    "hyprland/language": {
        "format": "{}",
        "format-ru": "üá∑üá∫",
        "format-en": "üá∫üá∏"
        // "on-click": "hyprctl switchxkblayout all next"
    },

    "custom/playerctl": {
        "format": " Û∞êä {}",
        "return-type": "json",
        "max-length": 40,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{artist}} - {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next"
    },

    "custom/weather": {
        "exec": "curl 'https://wttr.in/Moscow?format=1'",
        "interval": 3600,
        "format": "{}",
        "tooltip": true
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "Û∞àà",
            "deactivated": "Û∞àâ"
        },
        "tooltip": true
    },

    "clock": {
        "format": "Û∞•î {:%a %H:%M:%S}",
        "format-alt": "Û∞ÉÆ {:%Y-%m-%d}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "interval": 1,
        "calendar": {
            "mode"          : "month",
            "mode-mon-col"  : 3,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "on-click-right": "mode",
            "format": {
                "months":     "<span color='#d8dee9'><b>{}</b></span>",
                "days":       "<span color='#bf616a'>{}</span>",
                "weeks":      "<span color='#a3be8c'><b>W{}</b></span>",
                "weekdays":   "<span color='#5e81ac'><b>{}</b></span>",
                "today":      "<span color='#ebcb8b'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "cpu": {
        "format": "Û∞òö {usage}%",
        "tooltip": true,
        "interval": 1,
        "on-click": "ghostty -e btop"
    },

    "memory": {
        "format": "Û∞çõ {}%",
        "interval": 1,
        "on-click": "ghostty -e btop"
    },

    "temperature#cpu": {
        "hwmon-path-abs": "/sys/devices/virtual/thermal/thermal_zone1",
        "input-filename": "temp1_input",
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Û±ÉÉ", "Û∞îè", "Û±ÉÇ"],
        "on-click": "ghostty -e btop",
        "tooltip": true,
        "tooltip-format": "CPU: {}¬∞C"
    },

    "custom/gpu_temp": {
      "interval": 2,
      "exec": "nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader",
      "format": "Û∞¢Æ {}¬∞C",
      "on-click": "ghostty -e btop",
      "tooltip": true,
      "tooltip-format": "GPU: {}¬∞C"
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ {capacity}%",
        "format-plugged": "Û∞ö• {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "network": {
        "format-wifi": "Û∞ñ© {essid} ({signalStrength}%)",
        "format-ethernet": "Û∞àÄ {ifname}",
        "format-linked": "Û∞àÄ {ifname} (No IP)",
        "format-disconnected": "Û∞ñ™ Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{ifname}: {ipaddr}",
        "on-click": "ghostty -e nmtui"
    },

    "pulseaudio": {
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "Û∞Ç∞ {volume}%",
        "format-bluetooth-muted": "Û∞Ç≤ {icon}",
        "format-muted": "Û∞ùü",
        "format-source": "Ó¥É",
        "format-source-muted": "ÓøÜ",
        "format-icons": {
            "headphone": "Û∞ãã",
            "hands-free": "Û∞•∞",
            "headset": "Û∞ãé",
            "phone": "Û∞è≤",
            "portable": "Û∞Ñù",
            "car": "Û∞Ñã",
            "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +2%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -2%"
    },

    // "backlight": {
    //     "format": "{icon} {percent}%",
    //     "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
    //     "on-scroll-up": "brightnessctl set +5%",
    //     "on-scroll-down": "brightnessctl set 5%-"
    // },

    "disk": {
        "interval": 30,
        "format": "Û∞ãä {percentage_used}%",
        "path": "/",
        "on-click": ""
    },

    "tray": {
        "icon-size": 20,
        "spacing": 4
    },

    "custom/power": {
      "format": "ÔÄë",
      "tooltip": true,
      "tooltip-format": "LMB: lock session\nMMB: poweroff\nRMB: suspend",
      "on-click": "loginctl lock-session",
      // "on-click-middle": "systemctl poweroff"
      "on-click-right": "systemctl suspend"
    }
}
